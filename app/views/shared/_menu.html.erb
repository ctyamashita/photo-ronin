<% if current_user %>
  <div class="fixed-bottom">
    <div>
      <ul>
        <div class="d-flex justify-content-between py-4 px-4">
          <li><%= link_to places_path do %>
            <i class="icon-big gray fas fa-home"></i>
            <% end %>
          </li>
          <li><button data-map-toggle-target="button" style="background: rgba(0,0,0,0); border: none">
              <i class="icon-big gray fas fa-bars" data-action="click->map-toggle#map_display"></i>
            </button>
          </li>
          <li>
            <button data-new-list-target="popupButton" data-action="click->new-list#showForm" style="background: rgba(0,0,0,0); border: none">
              <i class="icon-big gray fas fa-plus"></i>
            </button>
          </li>
          <li><%= link_to places_path do %>
            <i class="icon-big gray fas fa-bars"></i>
            <% end %>
          </li>
          <li><%= link_to user_dashboard_path(current_user) do %>
            <i class="icon-big gray fas fa-user"></i>
            <% end %>
          </li>
        </div>
      </ul>
    </div>
  </div>
<% end %>
