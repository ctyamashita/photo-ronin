
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" data-action="slid.bs.carousel->carousel-map#selectPin">
  <% if @place.photos.any? %>
    <div class="carousel-inner">
      <div class="carousel-item active" data-id="<%= @place.photos.first.id %>">
        <% first_photo = @place.photos.first %>
        <span class="helper"></span>
        <img class="d-block w-100" src="<%= cl_image_path(first_photo.photo.key) %>" />
      </div>
      <% @place.photos[1..-1].each do |photo|%>
      <div class="carousel-item" data-id="<%= photo.id %>">
        <img class="d-block w-100" src="<%= cl_image_path(photo.photo.key) %>" />
      </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  <% else %>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="<%= image_path('Ronin.jpg') %>" />
      </div>
    </div>
  <% end %>
</div>
