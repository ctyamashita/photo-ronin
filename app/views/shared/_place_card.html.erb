<div class="card-trip mb-2 mx-1 w-100">
  <img src="<%= place.photos.any? ? cl_image_path(place.photos.first.photo.key) : image_path('Ronin.jpg') %>" />
  <%= link_to '', place_path(place), class: 'card-trip-link' %>
  <div class="card-trip-infos h-100">
    <div class="position-relative p-2 mb-3">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="bold"><%= place.name %></h3>
        <% if place.average_review > 0 %>
          <h4 class=""><%= place.average_review %>  <i class="fas fa-star green bold"></i></h4>
        <% else %>
          <h4 class="bold">No Review</h4>
        <% end %>
      </div>
      <h4 class="green mb-4"><%= place.address %></h4>
      <div class="mt-4">
        <% place.tag_list.each do |tag| %>
          <%= link_to tag, tagged_path(tag: tag), class: 'tag-text' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
