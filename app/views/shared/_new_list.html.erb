<h2 class="mb-3">Add to a list</h2>
<%= simple_form_for [@place,@list] do |f| %>
  <%= f.input :title, label: false , input_html: { class: "input mt-3 list-input"  }, placeholder: "Name list" %>
  <%= f.submit 'Add', class: 'btn btn-ghost mt-3 position-absolute position-add', item_wrapper_class: 'd-flex'%>
<% end %>
