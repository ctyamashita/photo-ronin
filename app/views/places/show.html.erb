<div data-controller="new-marker">
  <button data-new-list-target="popupButton" data-action="click->new-marker#showForm" style="background: rgba(0,0,0,0); border: none">
    <div class="flex-column icon-active">
      <i class="icon-big gray fas fa-plus"></i><p class="icon-text">Add to List</p>
    </div>
  </button>

  <div class="container text-center bg-black btn-close-relative" id="form-list" data-new-marker-target="formList">

    <div class="vertical-center" data-controller="form-toggle">
      <% if @lists.any? %>
        <div data-form-toggle-target="list" class='d-none'>
          <%= render 'shared/new_marker', place: @place, marker: @marker, lists: @lists %>
        </div>
        <div data-form-toggle-target="new">
          <%= render 'shared/new_list', list: @list %>
        </div>
        <button data-form-toggle-target="button" data-action="click->form-toggle#formDisplay" class='btn btn-ghost mt-3'>Existing list</button>
      <% else %>
        <%= render 'shared/new_list', list: @list %>
      <% end %>
    </div>
    <button data-action="click->new-marker#showForm" class='btn-close'>âœ–</button>
</div>
