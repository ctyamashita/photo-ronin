<div class="container">
  <div class="card-trip position-relative mt-5">

    <%# TODO Made this placeholder for "LIKE", not functional yet %>

    <div class="position-absolute btn-like-place" data-controller="new-marker">
      <button data-new-list-target="popupButton" data-action="click->new-marker#showForm" style="background: rgba(0,0,0,0); border: none">
        <div class="flex-column icon-active">
          <i class="icon-card white fas fa-heart"></i>
        </div>
      </button>

      <div class="container text-center bg-black btn-close-relative" id="form-list" data-new-marker-target="formList">
        <div class="vertical-center">

          <% if @lists.any? %>
            <h2>Select a list</h2>
            <%= simple_form_for [@place, @marker] do |f| %>
              <%= f.association :list, collection: @lists, include_blank: false %>
              <%= f.submit class: 'btn btn-ghost mt-3'%>
            <% end %>
          <% else %>
            <h2 class="mb-5">No list available</h2>
            <button data-new-list-target="popupButton" data-action="click->new-list#showForm click->new-marker#showForm" style="background: rgba(0,0,0,0); border: none">
                <div class="flex-column icon-active">
                  <i class="icon-card gray fas fa-plus"></i><p class="icon-text">Create a new list</p>
                </div>
            </button>
          <% end %>
        </div>
        <button data-action="click->new-marker#showForm" class='btn-close'>✖</button>
      </div>
    </div>

    <div class="position-absolute btn-add-list" data-controller="new-marker">
      <button data-new-list-target="popupButton" data-action="click->new-marker#showForm" style="background: rgba(0,0,0,0); border: none">
        <div class="flex-column icon-active">
          <i class="icon-card white fas fa-plus"></i>
        </div>
      </button>

      <div class="container text-center bg-black btn-close-relative" id="form-list" data-new-marker-target="formList">
        <div class="vertical-center">

          <% if @lists.any? %>
            <h2>Select a list</h2>
            <%= simple_form_for [@place, @marker] do |f| %>
              <%= f.association :list, collection: @lists, include_blank: false %>
              <%= f.submit class: 'btn btn-ghost mt-3'%>
            <% end %>
          <% else %>
            <h2 class="mb-5">No list available</h2>
            <button data-new-list-target="popupButton" data-action="click->new-list#showForm click->new-marker#showForm" style="background: rgba(0,0,0,0); border: none">
                <div class="flex-column icon-active">
                  <i class="icon-big gray fas fa-plus"></i><p class="icon-text">Create a new list</p>
                </div>
            </button>
          <% end %>
        </div>
        <button data-action="click->new-marker#showForm" class='btn-close'>✖</button>
      </div>
    </div>

    <img src=<%= @place.photos.any? ? cl_image_path(@place.photos.first.photo.key) : '/assets/Ronin.jpg' %> />
    <div class="card-trip-infos mt-3">
      <div class="position-relative">
        <div class="d-flex justify-content-between">
          <h4 class="bold mt-1"><%= @place.name %></h3>
          <h4 class="bold">5.0  <i class="fas fa-star yellow"></i></h4>
        </div>
        <h4 class="green mb-4"><%= @place.address %></h4>
        <p>This place is #urban, #moody, #cityscape, #cyberpunk and #nightphoto</p>
      </div>
    </div>
    <div class="mt-5">
      <div data-map-toggle-target="map" style="width: 100%; height: 30vh; margin: 0; padding: 0">
      <%= render 'map', marker: @pins %>
        </div>
    </div>
  </div>

  <div class="d-flex justify-content-between px-3 mt-5">
    <h2>Reviews</h2>
  </div>

  <div>
  <%  3.times do %>
    <div class="light-gray px-3 pb-3 mt-2">
      <div class="d-flex justify-content-between">
        <p class="light-gray">Username</p>
        <p>5 days ago</p>
      </div>
      <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Excepturi voluptatum reiciendis autem est voluptates veniam omnis numquam laboriosam natus eos.</p>
    </div>
  <% end %>
      <%= form_with(model: [@place], local: true) do |f| %>
        <%= f.text_area :content,
                        class: "form-control rounded-corner mt-3",
                        rows: 3,
                        input_html: { autocomplete: "Comment" } %>
        <%= button_tag type: "submit", class: "btn btn-ghost float-right mt-3" do %>
          Post
        <% end %>
      <% end %>
  </div>

</div>
